<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".highlight">


    <LinearLayout
        android:id="@+id/bars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="4dp"
        android:elevation="8dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/whitebar"

            android:layout_marginRight="3dp"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/whitebar"
            android:layout_marginRight="3dp"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/whitebar"

            android:layout_marginRight="3dp"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/whitebar"

            android:layout_marginRight="3dp"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/whitebar"

            android:layout_marginRight="3dp"

            />

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bars"
        android:elevation="8dp"
    >
        <ImageView
            android:id="@+id/pfpicon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/smalljoshua"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            />


        <LinearLayout
            android:id="@+id/infoBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:elevation="8dp"
            app:layout_constraintStart_toEndOf="@id/pfpicon"
            app:layout_constraintEnd_toStartOf="@id/closeiv"
            app:layout_constraintTop_toTopOf="@id/pfpicon"
            app:layout_constraintBottom_toBottomOf="@id/pfpicon">

        <!-- Row 1: title + date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highlight"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="December 3, 2023"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Row 2: bars icon + artist · song -->
        <TextView
            android:id="@+id/tvTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/musicbars"
        android:drawablePadding="6dp"
            android:textColor="@color/white"
        android:text="Artist · Song Title ›"
        android:maxLines="1"
        android:ellipsize="end"/>
    </LinearLayout>


    <ImageView
            android:id="@+id/closeiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/whitex"
            android:layout_marginRight="16dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lowerBar"
        android:src="@drawable/highlightpicture"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/Shape1"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lowerBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/black"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 1 -->
        <LinearLayout
            android:id="@+id/itemActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/itemCreate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1">
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                android:src="@drawable/actvity" app:tint="@color/reddish"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textColor="@color/reddish"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 2 -->
        <LinearLayout
            android:id="@+id/itemCreate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toEndOf="@id/itemActivity"
            app:layout_constraintEnd_toStartOf="@id/itemCreatePost"
            app:layout_constraintTop_toTopOf="@id/itemActivity"
            app:layout_constraintBottom_toBottomOf="@id/itemActivity"
            app:layout_constraintHorizontal_weight="1">
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                android:src="@drawable/createhighlight" app:tint="@color/reddish"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:textColor="@color/reddish"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 3 -->
        <LinearLayout
            android:id="@+id/itemCreatePost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/itemCreate"
            app:layout_constraintEnd_toStartOf="@id/itemBrowse"
            app:layout_constraintTop_toTopOf="@id/itemActivity"
            app:layout_constraintBottom_toBottomOf="@id/itemActivity"
            app:layout_constraintHorizontal_weight="1">
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                android:src="@drawable/createpost" app:tint="@color/reddish"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Post"
                android:textColor="@color/reddish"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 4 -->
        <LinearLayout
            android:id="@+id/itemBrowse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/itemCreatePost"
            app:layout_constraintEnd_toStartOf="@id/itemSend"
            app:layout_constraintTop_toTopOf="@id/itemActivity"
            app:layout_constraintBottom_toBottomOf="@id/itemActivity"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/browse"
                app:tint="@color/reddish" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse"
                android:textColor="@color/reddish"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 5 -->
        <LinearLayout
            android:id="@+id/itemSend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/itemBrowse"
            app:layout_constraintEnd_toStartOf="@id/itemMore"
            app:layout_constraintTop_toTopOf="@id/itemActivity"
            app:layout_constraintBottom_toBottomOf="@id/itemActivity"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/share"
                app:tint="@color/reddish" />
            <TextView android:text="Send"
                android:textSize="12sp"
                android:textColor="@color/reddish"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>

        <!-- 6 -->
        <LinearLayout
            android:id="@+id/itemMore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/itemSend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/itemActivity"
            app:layout_constraintBottom_toBottomOf="@id/itemActivity"
            app:layout_constraintHorizontal_weight="1">
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                android:src="@drawable/big3dots" app:tint="@color/reddish"/>
            <TextView
                android:text="More"
                android:textSize="12sp"
                android:textColor="@color/reddish"
                android:layout_height="wrap_content"
                 android:layout_width="wrap_content"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>