                    android:src="@drawable/zackjohn"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    />
                <ImageView
                    android:id="@+id/cam4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/camera"
                    android:layout_marginRight="24dp"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toEndOf="@id/person4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:weightSum="2"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="andrewww_"
                        android:gravity="bottom"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Sounds good "
                        android:gravity="top"
                        />




                </LinearLayout>
                <TextView
                    android:id="@+id/time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/cam4"
                    android:text=". 20m"
                    app:layout_constraintBottom_toBottomOf="@id/cam4"
                    android:layout_marginRight="12dp"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/chat5"

                >
                <ImageView
                    android:id="@+id/person5"
                    android:layout_width="80dp"
