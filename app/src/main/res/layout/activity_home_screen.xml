<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"

        >

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
            android:id="@+id/direct"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/redshare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="15dp"

            ></ImageView>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/camera"
            app:layout_constraintEnd_toStartOf="@id/direct"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></ImageView>

        <TextView
            android:id="@+id/logo2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Socially"
            android:textColor="@color/reddish"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/greybar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        android:layout_marginTop="12dp"
        />

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/greybar"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/greybar"
               android:id="@+id/storyscroll"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/storiesbar"

                   android:orientation="horizontal"
                   android:weightSum="5"
                   >
                   <FrameLayout
                       android:layout_width="0dp"
                       android:layout_height="100dp"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/story1"
                           android:layout_width="match_parent"
                           android:src="@drawable/story"
                           android:layout_height="match_parent"
                           android:layout_marginBottom="12dp"
                           ></ImageView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Your Story"
                           android:layout_gravity="bottom|center_horizontal"

                           ></TextView>
                   </FrameLayout>



                   <FrameLayout
                       android:layout_width="0dp"
                       android:layout_height="100dp"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/story2"
                           android:layout_width="match_parent"
                           android:src="@drawable/karenne"
                           android:layout_height="match_parent"
                           android:layout_marginBottom="12dp"
                           ></ImageView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="karenne"
                           android:layout_gravity="bottom|center_horizontal"

                           ></TextView>
                   </FrameLayout>

                   <FrameLayout
                       android:layout_width="0dp"
                       android:layout_height="100dp"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/story3"
                           android:layout_width="match_parent"
                           android:src="@drawable/zackjohn"
                           android:layout_height="match_parent"
                           android:layout_marginBottom="12dp"
                           ></ImageView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="zackjohn"
                           android:layout_gravity="bottom|center_horizontal"

                           ></TextView>
                   </FrameLayout>

                   <FrameLayout
                       android:layout_width="0dp"
                       android:layout_height="100dp"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/story4"
                           android:layout_width="match_parent"
                           android:src="@drawable/kieron"
                           android:layout_height="match_parent"
                           android:layout_marginBottom="12dp"
                           ></ImageView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="kieron_d"
                           android:layout_gravity="bottom|center_horizontal"

                           ></TextView>
                   </FrameLayout>

                   <FrameLayout
                       android:layout_width="0dp"
                       android:layout_height="100dp"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/story5"
                           android:layout_width="match_parent"
                           android:src="@drawable/story"
                           android:layout_height="match_parent"
                           android:layout_marginBottom="12dp"
                           ></ImageView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Craig_"
                           android:layout_gravity="bottom|center_horizontal"

                           ></TextView>
                   </FrameLayout>

               </LinearLayout>
           </ScrollView>
           <View
               android:id="@+id/greybar2"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/divider"
               app:layout_constraintTop_toBottomOf="@id/storyscroll"
               />
           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/postTopBar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/storyscroll"
               android:orientation="horizontal"
               >

               <ImageView
                   android:id="@+id/postpfp"
                   android:layout_width="30dp"
                   android:layout_height="50dp"
                   android:src="@drawable/smalljoshua"
                   android:layout_marginLeft="12dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"

                   ></ImageView>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toEndOf="@id/postpfp"
                   android:layout_marginLeft="12dp"
                   app:layout_constraintTop_toTopOf="@id/postpfp"
                   app:layout_constraintBottom_toBottomOf="@id/postpfp"
                   android:orientation="vertical"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="joshua_l"
                       android:textStyle="bold"
                       android:drawableEnd="@drawable/verified"
                       >
                   </TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Tokyo, Japan"
                       android:textSize="12sp"
                       >
                   </TextView>

               </LinearLayout>

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@drawable/big3dots"
                   android:layout_marginRight="12dp"
                   >
               </ImageView>

           </androidx.constraintlayout.widget.ConstraintLayout>
           <ImageView
               android:id="@+id/postimage"
               android:layout_width="match_parent"
               android:layout_height="400dp"
               app:layout_constraintTop_toBottomOf="@id/postTopBar"
               android:src="@drawable/joshuapost"
               android:scaleType="centerCrop"
               ></ImageView>
           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/postBottomBar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/postimage"

               >
               <ImageView
                   android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@drawable/like"
                   android:layout_marginLeft="12dp"
                   android:layout_marginTop="12dp"

                   />
               <ImageView
                   android:id="@+id/comment"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toEndOf="@id/like"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@drawable/comment"
                   android:layout_marginLeft="12dp"
                   android:layout_marginTop="12dp"

                   />

               <ImageView
                   android:id="@+id/share"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toEndOf="@id/comment"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@drawable/share"
                   android:layout_marginLeft="12dp"
                   android:layout_marginTop="12dp"

                   />

               <ImageView
                   android:id="@+id/options"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@drawable/blacksave"
                   android:layout_marginRight="12dp"
                   android:layout_marginTop="12dp"
                   />

           </androidx.constraintlayout.widget.ConstraintLayout>
           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/likedbycl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/likedbyi"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:src="@drawable/likedby"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginLeft="12dp"
                   />
               <TextView
                   android:id="@+id/likedbyt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toEndOf="@id/likedbyi"
                   android:text="Liked by craig_love and 44,686 others"
                   android:layout_marginLeft="10dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   />

               <TextView
                   android:id="@+id/textView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ellipsize="none"
                   android:scrollHorizontally="false"
                   android:singleLine="false"
                   android:inputType="textMultiLine"
                   android:lineSpacingExtra="2dp"
                   app:layout_constraintTop_toBottomOf="@id/likedbyt"
                   android:text="joshua_l The game in Japan was amazing and I want to share some photos"
                   android:textSize="16sp"/>



           </androidx.constraintlayout.widget.ConstraintLayout>
       </LinearLayout>

   </ScrollView>





    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        />
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            ></ImageView>

        <ImageView
            android:id="@+id/explore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/search"
            ></ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/create"
            ></ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/heart"
            ></ImageView>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/smalljoshua"
            ></ImageView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>